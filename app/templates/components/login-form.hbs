<form class='small-form' {{action 'submitLogin' on='submit'}}>
  <div class="form-group">
    <label for="username">Username</label>
    {{input value=username required='required'  class="form-control"}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input value=password type='password' required='required' class="form-control"}}
  </div>
  <button class="btn btn-primary center-block">Log In</button>
</form>
