<button class='btn btn-success' {{action 'toggleModal' }}>Add Answer</button>

{{#if isShowingModal}}
  {{#modal-dialog close='toggleModal'
    targetAttachment="center"
    translucentOverlay=true
    container-class="wider"}}
    <form {{action 'saveAnswer' question currentUser.curUser on='submit'}}>
      <div class="form-group">
        <label for="content">Answer:</label>
        {{input value=content id="content" class="form-control" required='required'}}
      </div>
      <button class="btn btn-success">Save answer</button>
    </form>
    {{/modal-dialog}}
{{/if}}
