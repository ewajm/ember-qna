<div>
    <form {{action 'saveQuestion' on='submit'}}>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" required='required' class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content" required='required' class="form-control"}}
      </div>
      <div class="form-group">
        <label for="info">Additional Notes:</label>
        {{input value=info id="info" class="form-control"}}
      </div>
      <button>Ask your question</button>
    </form>
  </div>
