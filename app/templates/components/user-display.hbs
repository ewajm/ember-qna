<div class="row">
  <div class="col-sm-2">
    {{{user-icon user.username}}}
    <p>{{user.username}}</p>
    <p>{{user.email}}</p>
    {{#if isUser}}
      <button class='btn btn-warning center-block' {{action 'toggleModal'}}>Edit Profile</button>
      <button class='btn btn-danger center-block' {{action 'logOut'}}>Log out</button>
    {{/if}}
  </div>
  <div class="col-sm-10">

  </div>
</div>

{{#if isShowingModal}}
  {{#modal-dialog close='toggleModal'
    targetAttachment="center"
    translucentOverlay=true
    container-class="wider"}}
    <form>
      <div class="form-group">
        <label for="email">Change email:</label>
        {{input value=email id="content" class="form-control" placeholder=user.email}}
      </div>
      <div class="form-group">
        <label for="password">New Password:</label>
        {{input value=password id="password" type='password' class="form-control"}}
      </div>
      <button class="btn btn-success" {{action 'updateUser' user}}>Save Edits</button>
    </form>
  {{/modal-dialog}}
{{/if}}
